<?php
/**
 * Implements hook_install().
 *
 * Create a role for the timewatch, which is allowed to only add and update work
 * sessions.
 */
function productivity_timewatch_install() {
  $role = new stdClass();
  $role->name = 'timewatch';
  $role->weight = 10;
  user_role_save($role);

  user_role_grant_permissions($role->rid, array('timewatch punch', 'access user profiles'));
}